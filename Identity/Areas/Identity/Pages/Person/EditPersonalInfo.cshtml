@page
@model Identity.Areas.Identity.Pages.Person.EditPersonalInfoModel
@{
    ViewData["Title"] = "ویراش اطلاعات شخصی";
    Layout = "_LayoutPanel";
}

@section Styles
{
    <link href="~/panel/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet" />
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>ویراش اطلاعات شخصی</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">مدیریت حساب کاربری</a>
            </li>
            <li class="active">
                <strong>ویراش اطلاعات شخصی</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a asp-area="Identity" asp-page="/User/Profile" class="btn btn-info float-l">بازگشت به پروفایل</a>
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>ویراش اطلاعات شخصی در هومت</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form method="post" enctype="multipart/form-data" asp-antiforgery="true">
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <input type="hidden" asp-for="PersonModel.Id" />
                        <input type="hidden" asp-for="PersonModel.PicturePath" />
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.PersonModel.Firstname">نام :</label>
                                    <input class="form-control" asp-for="@Model.PersonModel.Firstname" placeholder="نام" />
                                    <span class="text-danger" asp-validation-for="@Model.PersonModel.Firstname"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.PersonModel.Middlename">نام مستعار :</label>
                                    <input class="form-control" asp-for="@Model.PersonModel.Middlename" placeholder="نام مستعار" />
                                    <span class="text-danger" asp-validation-for="@Model.PersonModel.Middlename"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.PersonModel.Lastname">نام خانوادگی :</label>
                                    <input class="form-control" asp-for="@Model.PersonModel.Lastname" placeholder="نام خانوادگی" />
                                    <span class="text-danger" asp-validation-for="@Model.PersonModel.Lastname"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.PersonModel.Gender">جنسیت :</label>
                                    <select asp-for="PersonModel.Gender" class="form-control">
                                        <option value="0">مرد</option>
                                        <option value="1">زن</option>
                                    </select>
                                    <span class="text-danger" asp-validation-for="@Model.PersonModel.Gender"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.PersonModel.NationalId">کد ملی :</label>
                                    <input class="form-control" asp-for="@Model.PersonModel.NationalId"
                                           placeholder="کد ملی" maxlength="10" />
                                    <span class="text-danger" asp-validation-for="@Model.PersonModel.NationalId"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="@Model.PersonModel.Description">درباره من :</label>
                                    <input class="form-control" asp-for="@Model.PersonModel.Description" placeholder="درباره من" />
                                    <span class="text-danger" asp-validation-for="@Model.PersonModel.Description"></span>
                                </div>
                            </div>
                        </div>
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            <div class="form-control" data-trigger="fileinput">
                                <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                <span class="fileinput-filename"></span>
                            </div>
                            <span class="input-group-addon btn btn-default btn-file">
                                <span class="fileinput-new">انتخاب تصویر</span>
                                <span class="fileinput-exists">تغییر</span>
                                <input type="file" asp-for="FormFile">
                            </span>
                            <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">حذف</a>
                        </div>
                        <div class="row">
                            <div class="col-auto">
                                <div class="form-group">
                                    <button class="btn btn-primary" data-style="zoom-in" type="submit">ذخیره</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @(await Html.PartialAsync("_ValidationScriptsPartial"))
    <script src="~/panel/js/plugins/jasny/jasny-bootstrap.min.js"></script>
    <script type="text/javascript">

    </script>
}

