@page
@model Identity.Areas.Identity.Pages.User.EditModel
@{
    ViewData["Title"] = "ویرایش حساب کاربری";
    Layout = "_LayoutPanel";
}
@section Styles
{
    
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>ویرایش اطلاعات اصلی</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">مدیریت حساب کاربری</a>
            </li>
            <li class="active">
                <strong>ویرایش اطلاعات</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a asp-area="Identity" asp-page="/User/List" asp-route-softwareId="@Model.UserModel.SoftwareId"
               class="btn btn-info float-l">بازگشت به لیست</a>
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>اطلاعات کاربری</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" asp-antiforgery="true">
                        <input type="hidden" asp-for="UserModel.Id" />
                        <input type="hidden" asp-for="UserModel.SoftwareId" />
                        <input type="hidden" asp-for="UserModel.PersonId" />
                        <input type="hidden" asp-for="UserModel.CreationDate" />
                        <input type="hidden" asp-for="UserModel.LastModifiedDate" />

                        <div class="form-group">
                            <label asp-for="UserModel.Username">نام کاربری :</label>
                            <input class="form-control" asp-for="UserModel.Username" placeholder="نام کاربری" />
                            <span class="text-danger" asp-validation-for="UserModel.Username"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Email">پست الکترونیکی :</label>
                            <input class="form-control" asp-for="UserModel.Email" placeholder="پست الکترونیکی" />
                            <span class="text-danger" asp-validation-for="UserModel.Email"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Mobile">تلفن همراه :</label>
                            <input class="form-control" asp-for="UserModel.Mobile" placeholder="تلفن همراه" />
                            <span class="text-danger" asp-validation-for="UserModel.Mobile"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.Password">گذرواژه :</label>
                            <input class="form-control" asp-for="UserModel.Password" placeholder="گذرواژه" />
                            <span class="text-danger" asp-validation-for="UserModel.Password"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="UserModel.RePassword">تکرار گذرواژه :</label>
                            <input class="form-control" asp-for="UserModel.RePassword" placeholder="تکرار گذرواژه" />
                            <span class="text-danger" asp-validation-for="UserModel.RePassword"></span>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-primary" type="submit">ذخیره</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @(await Html.PartialAsync("_ValidationScriptsPartial"))
}