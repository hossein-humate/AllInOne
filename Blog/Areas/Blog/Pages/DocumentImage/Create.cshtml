@page
@model Blog.Areas.Blog.Pages.DocumentImage.CreateModel
@{
    ViewData["Title"] = "ثبت تصویر جدید";
    Layout = "_LayoutPanel";
}

@section Styles
{
    <link href="~/panel/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet" />
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>ثبت تصویر</h2>
        <ol class="breadcrumb">
            <li>
                <a href="#">مدیریت مقالات و مستندات</a>
            </li>
            <li class="active">
                <strong>ثبت تصویر</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a asp-page="List" asp-route-documentId="@Model.DocumentImageModel.DocumentId" 
               class="btn btn-info float-l">بازگشت به لیست</a>
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>ثبت تصویر برای مستند @Model.DocumentImageModel.Document?.Name در هومت</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="close-link">
                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form method="post" enctype="multipart/form-data" asp-antiforgery="true">
                        <input type="hidden" asp-for="DocumentImageModel.DocumentId"/>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="row">
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="DocumentImageModel.Caption">پانویس :</label>
                                    <input class="form-control" asp-for="DocumentImageModel.Caption" placeholder="پانویس"/>
                                    <span class="text-danger" asp-validation-for="DocumentImageModel.Caption"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-6 col-lg-6">
                                <div class="form-group">
                                    <label asp-for="DocumentImageModel.Alt">متن جایگزین :</label>
                                    <input class="form-control" asp-for="DocumentImageModel.Alt" placeholder="متن جایگزین"/>
                                    <span class="text-danger" asp-validation-for="DocumentImageModel.Alt"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-5 col-lg-5">
                                <div class="form-group">
                                    <label asp-for="DocumentImageModel.Width">طول :</label>
                                    <input class="form-control" asp-for="DocumentImageModel.Width" placeholder="طول"/>
                                    <span class="text-danger" asp-validation-for="DocumentImageModel.Width"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-5 col-lg-5">
                                <div class="form-group">
                                    <label asp-for="DocumentImageModel.Height">ارتفاع :</label>
                                    <input class="form-control" asp-for="DocumentImageModel.Height" placeholder="ارتفاع"/>
                                    <span class="text-danger" asp-validation-for="DocumentImageModel.Height"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-md-2 col-lg-2">
                                <div class="form-group">
                                    <label asp-for="DocumentImageModel.IsActive">فعال</label>
                                    <input type="checkbox" class="checkbox inline" asp-for="DocumentImageModel.IsActive"/>
                                    <span class="text-danger" asp-validation-for="DocumentImageModel.IsActive"></span>
                                </div>
                            </div>
                        </div>
                        <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                            <div class="form-control" data-trigger="fileinput">
                                <i class="glyphicon glyphicon-file fileinput-exists"></i>
                                <span class="fileinput-filename"></span>
                            </div>
                            <span class="input-group-addon btn btn-default btn-file">
                                <span class="fileinput-new">انتخاب تصویر</span>
                                <span class="fileinput-exists">تغییر</span>
                                <input type="file" asp-for="FormFile">
                            </span>
                            <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">حذف</a>
                        </div>
                        <span class="text-danger" asp-validation-for="FormFile"></span>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="DocumentImageModel.Description">توضیحات :</label>
                                    <textarea rows="4" class="form-control" asp-for="DocumentImageModel.Description"
                                              placeholder="توضیحات"></textarea>
                                    <span class="text-danger" asp-validation-for="DocumentImageModel.Description"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <button class="btn btn-primary" id="btnSubmit" data-style="zoom-in"
                                        type="submit">
                                    ذخیره
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @(await Html.PartialAsync("_ValidationScriptsPartial"))
    <script src="~/panel/js/plugins/jasny/jasny-bootstrap.min.js"></script>
    <script type="text/javascript">
    </script>
}